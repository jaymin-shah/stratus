{
  "compilerOptions": {
    "target": "es6",
    "module": "system",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": "",
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "*": [
        "../../node_modules/*"
      ],
      "core-js/es7/reflect": [
        "../../node_modules/core-js/proposals/reflect-metadata"
      ],
      "@stratusjs/angular/*": [
        "../angular/src/*"
      ],
      "@stratusjs/angularjs/*": [
        "../angularjs/src/*"
      ],
      "@stratusjs/angularjs-extras/*": [
        "../angularjs-extras/src/*"
      ],
      "@stratusjs/backend/*": [
        "../backend/src/*"
      ],
      "@stratusjs/boot/*": [
        "src/*"
      ],
      "@stratusjs/core/*": [
        "../core/src/*"
      ],
      "@stratusjs/idx/*": [
        "../idx/src/*"
      ],
      "@stratusjs/react/*": [
        "../react/src/*"
      ],
      "@stratusjs/runtime/*": [
        "../runtime/src/*"
      ],
      "stratus": [
        "../../node_modules/stratus.js/dist/stratus"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
